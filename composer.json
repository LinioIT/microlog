{
    "name": "linio/microlog",
    "description": "Provides a static logger",
    "keywords": ["linio", "log", "logging"],
    "type": "library",
    "homepage": "https://github.com/linioit/microlog",
    "license": "BSD-3-Clause",
    "require": {
        "php": ">=7.0",
        "psr/log": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "friendsofphp/php-cs-fixer": "^2.4"
    },
    "suggest": {
        "monolog/monolog": "The recommended PSR-3 compatible logger"
    },
    "autoload": {
        "psr-4": {
            "Linio\\Component\\Microlog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Linio\\Component\\Microlog\\": "tests/"
        }
    }
}
